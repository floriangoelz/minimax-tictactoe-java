package ticTacToe;

public class TicTacToe {

	private int field = 1023210;
	private int[] players = new int[] { 0, 1 };
	private char[] symbols = new char[] {'X', 'O'};

	// debug
	public TicTacToe() {
		draw();
		setBit(1);
	}

	private void setBit(int bitToSet) {
		int newField = field;
		System.out.println(Integer.toBinaryString(newField));

		field = newField;
	}

	private void draw() {
		int bit0;
		int bit1;
		String print = "";
		for (int i = 9; i > 0; i--) {
			// Player 1 Bit
			bit0 = (field >> i) & 1;
			// Player 2 Bit
			bit1 = (field >> i + 9) & 1;
			
		}

		// Player 0
		for (int i = 9; i > 0; i--) {
			bit = (field >> i) & 1;
		}

		// Player 1
		for (int i = 18; i > 9; i--) {
			bit = (field >> i) & 1;
		}

		final String HORIZONTAL = "-----------------\n";
		String print = "  X  |  O  |  X  \n";
		print += HORIZONTAL;
		print += "  X  |  O  |  X  \n";
		print += HORIZONTAL;
		print += "  X  |  O  |  X  \n";
		System.out.println(print);

//		final String HORIZONTAL = "-----------------\n";
//		String print = "  X  |  O  |  X  \n";
//		print += HORIZONTAL;
//		print += "  X  |  O  |  X  \n";
//		print += HORIZONTAL;
//		print += "  X  |  O  |  X  \n";
//		System.out.println(print);
	}
}
