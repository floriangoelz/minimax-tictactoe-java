package ticTacToe;

public class TicTacToe {

	private int field = 1;
	private int[] players = new int[] { 0, 1 };
	private char[] symbols = new char[] { 'X', 'O' };

	// debug
	public TicTacToe() {
		draw();
		setBit(1);
	}

	private void setBit(int bitToSet) {
		int newField = field;
		// System.out.println(Integer.toBinaryString(newField));

		field = newField;
	}

	private void draw() {
		final String HORIZONTAL = "\n-----------------\n";
		String print = "";
		boolean bit0;
		boolean bit1;
		for (int i = 9; i > 0; i--) {
			// Player 1 Bit
			bit0 = ((field >> i) & 1) == 1 ? true : false;
			// Player 2 Bit
			bit1 = ((field >> i + 9) & 1) == 1 ? true : false;

			print += "  ";

			if (bit0) {
				print += "X";
			} else if (bit1) {
				print += "O";
			} else {
				print += " ";
			}
			if (i % 3 == 0 && i != 9) {
				print += HORIZONTAL;
			}
		}
		System.out.println(print);

//		final String HORIZONTAL = "-----------------\n";
//		String print = "  X  |  O  |  X  \n";
//		print += HORIZONTAL;
//		print += "  X  |  O  |  X  \n";
//		print += HORIZONTAL;
//		print += "  X  |  O  |  X  \n";
//		System.out.println(print);
	}
}
