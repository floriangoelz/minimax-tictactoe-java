package ticTacToe;

public class TicTacToe {

	private int field;
	private int[] players = new int[] { 0, 1 };

	// debug
	public TicTacToe() {
		draw();
	}
	
	private void draw() {
		final String HORIZONTAL = "-------------\n";
		String print = "  X  |  O  |  X  \n";
		print += HORIZONTAL;
		print += "  X  |  O  |  X  \n";
		print += HORIZONTAL;
		print += "  X  |  O  |  X  \n";
		System.out.println(print);
	}
}
